{
  "name": "rite-monorepo",
  "private": true,
  "version": "0.0.1",
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "dev": "turbo run dev",
    "dev:next": "turbo run dev --filter=next-app",
    "dev:sveltekit": "turbo run dev --filter=sveltekit-poc",
    "dev:mobile": "turbo run start --filter=mobile",
    "dev:backend": "turbo run dev --filter=@rite/backend",
    "predev": "pnpm --filter=@rite/backend run dev --until-success && pnpm --filter=@rite/backend convex dashboard",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check"
  },
  "dependencies": {},
  "devDependencies": {
    "turbo": "^2.5.0"
  }
}
