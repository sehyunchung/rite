{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noEmit": true,
		"incremental": true,
		"types": ["node"]
	},
	"exclude": ["node_modules", "dist", "build", ".next", ".turbo"]
}
